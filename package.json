{
  "name": "resolutions",
  "version": "1.0.2",
  "description": "A macOS utility to quickly switch all monitor resolutions from a menu bar app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prebuild": "bash scripts/build-displayplacer.sh",
    "build": "npm run prebuild && electron-builder",
    "build:mac": "npm run prebuild && electron-builder --mac",
    "build:mac-arm64": "npm run prebuild && electron-builder --mac --arm64",
    "build:mac-x64": "npm run prebuild && electron-builder --mac --x64"
  },
  "keywords": [
    "electron",
    "macos",
    "menu-bar",
    "resolution",
    "monitor"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "electron": "^38.2.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.resolutions.app",
    "productName": "Resolutions",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/app-icon.png",
      "extendInfo": {
        "LSUIElement": true
      },
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!.gitignore",
      "!.github",
      "!scripts"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": ["**/*"]
      }
    ]
  }
}
